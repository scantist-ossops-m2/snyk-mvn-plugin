{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "target": "es2022",  // Updated to ES2022 for Node 18 compatibility
    "lib": ["ES2022"],     // Updated to include all libraries up to ES2022
    "module": "ES2022",   // Updated to use ES Modules (stable in Node 18)
    "moduleResolution": "node",  // Use Node's module resolution for ES Modules
    "allowSyntheticDefaultImports": true,  // Allow importing CommonJS with default import
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": false // Needed to compile tap and ansi-escapes
  },
  "include": [
      "./lib/**/*"
  ]
}